{{yield}}

{{#paper-card}}
   <md-card-title>
    <md-card-title-text>
      <div class="layout-row">
        {{#if invoice.received}}
          <span class="md-title flex">{{invoice.payee.name}}</span>
        {{else}}
          <span class="md-title flex">{{invoice.payer.name}}</span>
        {{/if}}
    </div>
      <span class="md-subhead">
        Invoice{{#if invoice.identifier}} #: {{invoice.identifier}}{{/if}}
      </span>
      <span class="md-subhead">
        Issued {{invoice.issued}}
      </span>
      {{#if invoice.due}}
        <span class="md-subhead">
          Due {{invoice.due}}
        </span>
      {{/if}}
    </md-card-title-text>
  </md-card-title>

  {{paper-divider}}

  {{#paper-card-content}}
    <span>{{invoice.currency.symbol}} {{invoice.total}} {{invoice.currency.currency}} </span>
  {{/paper-card-content}}

  {{#paper-card-content}}
    <div layout="row" layout-align="end center">
      {{#paper-button raised=true primary=true onClick=(action 'submit')}}
        Pay via Stripe
      {{/paper-button}}
    </div>
  {{/paper-card-content}}

{{/paper-card}}
